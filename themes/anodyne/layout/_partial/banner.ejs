<!-- Banner -->
<div class="w-100 bg-1 ph5-ns ph3 text-light">
    
    <nav class="db dt-l w-100 mw8 center border-box pv3">
        <a class="db dtc-l v-mid link dim w-100 w-25-l tc tl-l mb2 mb0-l white" href="<%- config.root %>" title="<%- config.title %>">
            
            <img src="<%- theme.logo_image_source %>" class="v-mid dib h2 br-100" alt="<%- config.title %>"> &nbsp; Chaz
        </a>
        <div class="db dtc-l v-mid w-100 w-75-l tc tr-l">
            <% for (var i in theme.menu) { %>
                <a class="link dim f6 f5-l dib mr3 mr4-l white" 
                    href="<%- url_for(theme.menu[i]) %>" 
                    title="<%= i %>">
                    <%= i %>
                </a>
            <% } %>
        </div>
    </nav>

    <!-- Title -->
    <div class="w-100 mw8 center vh-40 dt">
        <div class="dtc v-mid white">
            <h1 class="f1-l f2-m tc tc-m tl-ns" style="font-size: <%- (mainText.length > 15? 3: 4) %>rem; text-shadow: rgba(0,0,0,.03) 2px 2px, rgba(0,0,0,.0285) 4px 4px, rgba(0,0,0,.0270) 6px 6px, rgba(0,0,0,.0255) 8px 8px, rgba(0,0,0,.0240) 10px 10px, rgba(0,0,0,.0225) 12px 12px, rgba(0,0,0,.0210) 14px 14px, rgba(0,0,0,.0195) 16px 16px, rgba(0,0,0,.0180) 18px 18px, rgba(0,0,0,.0165) 20px 20px, rgba(0,0,0,.0150) 22px 22px, rgba(0,0,0,.0135) 24px 24px, rgba(0,0,0,.0120) 26px 26px, rgba(0,0,0,.0105) 28px 28px, rgba(0,0,0,.0090) 30px 30px, rgba(0,0,0,.0075) 32px 32px, rgba(0,0,0,.0060) 34px 34px, rgba(0,0,0,.0045) 36px 36px, rgba(0,0,0,.0030) 38px 38px, rgba(0,0,0,.0015) 40px 40px"><%- mainText %></h1>
            <p class="f4 fw1 pab-100px tc tc-m tl-ns"><%- secondaryText %></p>
        </div>
    </div>

    <!-- Icon
    <div class="relative w-100 mw8 center white dn dn-m db-ns">
        <i class="header-icon fa <%- faIconCss %>"></i>
    </div> -->
</div>